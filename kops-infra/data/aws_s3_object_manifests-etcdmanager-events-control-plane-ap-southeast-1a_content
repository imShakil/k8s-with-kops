      name: etcd-v3-5-24
    - mountPath: /opt/etcd-v3.6.5
      name: etcd-v3-6-5
    - mountPath: /var/log/etcd.log
      name: varlogetcd
  hostNetwork: true
  hostPID: true
  priorityClassName: system-cluster-critical
  tolerations:
  - key: CriticalAddonsOnly
    operator: Exists
